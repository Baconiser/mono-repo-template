{
  "name": "@monorepo/api-client",
  "version": "1.0.0",
  "description": "Auto-generated API client from Swagger/OpenAPI specification",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "generate": "openapi-typescript http://localhost:3001/api/docs-json -o ./src/generated/schema.ts",
    "generate:docker": "docker run --rm -v \"${PWD}:/local\" openapitools/openapi-generator-cli:latest generate -i http://host.docker.internal:3001/api/docs-json -g typescript-axios -o /local/src/generated --additional-properties=supportsES6=true,npmName=@monorepo/api-client,typescriptThreePlus=true",
    "generate:java": "openapi-generator-cli generate -i http://localhost:3001/api/docs-json -g typescript-axios -o ./src/generated --additional-properties=supportsES6=true,npmName=@monorepo/api-client,typescriptThreePlus=true",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist src/generated"
  },
  "dependencies": {
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "@openapitools/openapi-generator-cli": "^2.7.0",
    "openapi-typescript": "^7.0.0",
    "openapi-fetch": "^0.9.0",
    "typescript": "^5.3.0",
    "rimraf": "^5.0.0"
  },
  "peerDependencies": {
    "axios": "^1.6.0"
  }
} 